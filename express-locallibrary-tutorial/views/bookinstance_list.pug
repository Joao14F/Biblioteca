extends layout

block content
  h1= title

  ul
  each val in bookinstance_list
    li
      a(href=val.url).link #{val.book.title} : #{val.imprint} -
      if val.status=='Available'
        span.text-primary.font-weight-bold #{val.status}
      else if val.status=='Maintenance'
        span.text-danger.font-weight-bold #{val.status}
      else
        span.text-warning.font-weight-bold #{val.status}
      if val.status!='Available'
        span  (Due: #{val.due_back_formatted} )

  else
    li There are no book copies in this library
